
@{
    ViewBag.Title = "编辑资料";
    Layout = "~/Views/Shared/_CenterLayout.cshtml";
}






<div class="bd pd-30">
    <form role="form" name="editProfileForm" class="form-horizontal" ng-controller="hmh.account.editprofile" ng-submit="editProfile(userBaseInfo)" novalidate>
        <div class="form-body row">
            <div class="col-xs-9">
                <div class="form-group">
                    <label class="col-md-4 control-label">昵称 <span class="text-red">*</span></label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" ng-model="userBaseInfo.NickName" placeholder="您的昵称" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">手机号 <span class="text-red">*</span></label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" ng-model="userBaseInfo.PhoneNumber" placeholder="手机号">
                    </div>
                </div>
                <div class="form-group last">
                    <label class="col-md-4 control-label">邮箱</label>
                    <div class="col-md-4">
                        <p class="form-control-static">
                            {{userBaseInfo.Email}} <a href=""><i class="fa fa-edit"></i> 修改</a>
                        </p>
                    </div>
                </div>
                <div class="form-group last">
                    <label class="col-md-4 control-label">密码</label>
                    <div class="col-md-4">
                        <p class="form-control-static">
                            ******* <a href="#"><i class="fa fa-edit"></i> 修改</a>
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">性别 <span class="text-red">*</span></label>
                    <div class="col-md-4">
                        <div class="radio-list">
                            <label class="radio-inline">
                                <input type="radio" name="userSex" value="男" ng-checked="userBaseInfo.Sex=='男'" ng-model="userBaseInfo.Sex"> 男
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="userSex" value="女" ng-checked="userBaseInfo.Sex=='女'" ng-model="userBaseInfo.Sex"> 女
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">生日 <span class="text-red">*</span></label>
                    <div class="col-md-4">
                        <div class="input-icon right">
                            <i class="fa fa-calendar"></i>
                            <input type="text" class="form-control" placeholder="选择您的生日" ng-model="userBaseInfo.Birthday" hmh-datepicker required>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-md-offset-3 col-md-9">
                <button type="submit" class="btn green" ng-disabled="editProfileForm.$invalid">保存</button>
            </div>
        </div>
    </form>
</div>
