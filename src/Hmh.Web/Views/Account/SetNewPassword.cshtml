
@{
    ViewBag.Title = "设置新密码";
    Layout = "~/Views/Shared/_CenterLayout.cshtml";
}

<ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-home"></i> 首页</a></li>
    <li><a href="/account">用户中心</a></li>
    <li><a href="/account/safecenter">安全设置</a></li>
    <li><a href="#">修改密码</a></li>
</ol>

<div class="row  marg-top-10">
    <div class="col-xs-4">
        <div class="well well-sm bg-lightgreen">
            <div class="media">
                <a class="media-left" href="#">
                    <span class="fa fa-check fa-2x text-green"></span>
                </a>
                <div class="media-body">
                    <h4 class="media-heading">身份认证</h4>
                    邮箱身份认证
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-4">
        <div class="well well-sm bg-green">
            <div class="media">
                <a class="media-left" href="#">
                    <span class="fa fa-credit-card text-lg  text-white"></span>
                </a>
                <div class="media-body">
                    <h4 class="media-heading">修改密码</h4>
                    设置新密码
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-4">
        <div class="well well-sm">
            <div class="media">
                <a class="media-left" href="#">
                    <span class="fa fa-building-o text-muted text-lg"></span>
                </a>
                <div class="media-body">
                    <h4 class="media-heading">完成</h4>
                    完成设置密码
                </div>
            </div>
        </div>
    </div>
</div>

<form role="form" name="setNewPasswordForm" class="form-horizontal" ng-controller="hmh.account.setnewpassword" ng-submit="postNewPassword(newPassword)" novalidate>
    <div class="form-body row">
        <div class="col-xs-9">            
            <div class="form-group last">
                <label class="col-md-4 control-label">新密码</label>
                <div class="col-md-6">
                    <input type="password" class="form-control" ng-model="newPassword.Password" placeholder="密码必须至少包含一个小写字母a-z" required />
                </div>
            </div>
        </div>
    </div>
    <div>
        <div class="col-md-offset-3 col-md-9">
            <button type="submit" class="btn green" ng-disabled="setNewPasswordForm.$invalid">确定</button>
        </div>
    </div>
</form>

