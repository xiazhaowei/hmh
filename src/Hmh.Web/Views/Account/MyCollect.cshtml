
@{
    ViewBag.Title = "我的收藏";
    Layout = "~/Views/Shared/_CenterLayout.cshtml";
}

<ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
        <a href="/account/mycollect">
            收藏的商品
        </a>
    </li>
    <li role="presentation">
        <a href="/account/mycollect">
            收藏的店铺
        </a>
    </li>
</ul>

<div class="row" ng-controller="hmh.account.mygoodscollects">
    <div class="col-xs-3 marg-top-10" ng-repeat="goodsCollect in myGoodsCollects">
        <div class="bd text-center">
            <div class="">
                <a href="/Home/GoodsInfo/{{goodsCollect.AboutId}}"><img src="http://placehold.it/260x260" class="img-responsive " /></a>
            </div>
            <div class="pd-10">
                {{goodsCollect.Name}}
            </div>
            <div class="">
                <span class="text-green text-lg">￥40.00</span>
            </div>            
            <div class="pd-btn-15">
                <a class="btn btn-default btn-sm" href="javascript:;" ng-click="del($index)" title="删除"><span class="fa fa-trash-o"></span></a>                             
            </div>
        </div>
    </div>    
</div>