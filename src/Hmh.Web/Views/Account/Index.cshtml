
@{
    ViewBag.Title = "个人中心";
    Layout = "~/Views/Shared/_CenterLayout.cshtml";
}



<div class="row">
    <div class="col-xs-3">
        <div class="dashboard-stat purple">
            <div class="visual">
                <i class="fa fa-user"></i>
            </div>
            <div class="details">
                <div class="number">
                    @ViewBag.MyAccount.MyNewInvoteCount
                </div>
                <div class="desc">
                    新邀请用户
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-3">
        <div class="dashboard-stat purple">
            <div class="visual">
                <i class="fa fa-users"></i>
            </div>
            <div class="details">
                <div class="number">
                    @ViewBag.MyAccount.User.MyRecommends.Count
                </div>
                <div class="desc">
                    总邀请用户
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-3">
        <div class="dashboard-stat yellow">
            <div class="visual">
                <i class="fa fa-jpy"></i>
            </div>
            <div class="details">
                <div class="number">
                    @ViewBag.MyAccount.User.UserExtend.RmbCoin
                </div>
                <div class="desc">
                    现金账户
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-3">
        <div class="dashboard-stat yellow">
            <div class="visual">
                <i class="fa fa-retweet"></i>
            </div>
            <div class="details">
                <div class="number">
                    @ViewBag.MyAccount.User.UserExtend.HCoin
                </div>
                <div class="desc">
                    H币账户
                </div>
            </div>
        </div>
    </div>
</div>

<div class="accountbase">
