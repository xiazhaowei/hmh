
@{
    ViewBag.Title = "邮箱验证-修改密码";
    Layout = "~/Views/Shared/_CenterLayout.cshtml";
}

<div class="row">
    <div class="col-xs-4">
        <div class="well well-sm bg-green">
            <div class="media">
                <a class="media-left" href="#">
                    <span class="fa fa-check fa-2x text-white"></span>
                </a>
                <div class="media-body">
                    <h4 class="media-heading">身份认证</h4>
                    邮箱身份认证
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-4">
        <div class="well well-sm">
            <div class="media">
                <a class="media-left" href="#">
                    <span class="fa fa-credit-card text-lg  text-muted"></span>
                </a>
                <div class="media-body">
                    <h4 class="media-heading">修改密码</h4>
                    设置新密码
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-4">
        <div class="well well-sm">
            <div class="media">
                <a class="media-left" href="#">
                    <span class="fa fa-building-o text-muted text-lg"></span>
                </a>
                <div class="media-body">
                    <h4 class="media-heading">完成</h4>
                    完成设置密码
                </div>
            </div>
        </div>
    </div>    
</div>


<form role="form" name="pwdEmailVerifyForm" class="form-horizontal" ng-controller="hmh.account.passwordemailverify" ng-submit="postPwdEmailVerify(verifyInfo)" novalidate>
    <div class="form-body row">
        <div class="col-xs-9">            
            <div class="form-group last">
                <label class="col-md-4 control-label">邮箱</label>
                <div class="col-md-4">
                    <p class="form-control-static">
                        @ViewBag.MyAccount.User.Email
                    </p>
                    <p>
                        <hmh-timerbutton email-to="@ViewBag.MyAccount.User.Email" post-url="/Account/SendEmailVerifyCode"></hmh-timerbutton>
                    </p>
                </div>
            </div>
            <div class="form-group last">
                <label class="col-md-4 control-label">验证码</label>
                <div class="col-md-4">
                    <input type="number" class="form-control" ng-model="verifyInfo.emailCode" placeholder="邮箱验证码" required/>
                </div>
            </div>            
        </div>        
    </div>
    <div>
        <div class="col-md-offset-3 col-md-9">
            <button type="submit" class="btn green" ng-disabled="pwdEmailVerifyForm.$invalid">确定</button>
        </div>
    </div>
</form>