@{
    Layout = null;
}



<!--搜索标头-->
<div class="main-menu">
    <div class="container">
        <div class="row">
            <div class="col-xs-2">
                <a href="/"><img src="/content/images/logo.png" alt="惠民汇logo" /></a>
            </div>
            <div class="col-xs-7">
                <div class="hmh-wrapper-inner">
                    <form class="hmh-form -form-search">
                        <div class="partial -left">
                            <input name="q" type="text" class="hmh-form-text -text-lg" placeholder="" autofocus="autofocus">
                        </div>
                        <div class="partial -right">
                            <button class="btn -btn-green -btn-lg" type="submit">
                                <i class="fa fa-search"></i> <span>搜索</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-xs-3">
                <ul class="nav nav-pills hmh-warpper-cart" role="tablist" ng-controller="hmh.mycartgoodses">
                    <li role="presentation">
                        <a href="#" class="btn dropdown-toggle" data-toggle="dropdown" data-hover="dropdown"><i class="fa fa-shopping-cart"></i> 我的购物车<span ng-cloak class="badge badge-danger">{{cartGoodsCount}}</span> <span class="caret"></span></a>
                        <div class="dropdown-menu pull-right">
                            <div class="hmh-cart-warp">
                                <div ng-show="!isCartEmpty">
                                    <div class="pd-15 hmh-cart-content">
                                        <div class="media" ng-repeat="cartGoods in cartGoodses">
                                            <a class="media-left" href="#">
                                                <img src="http://placehold.it/60x60" alt="...">
                                            </a>
                                            <div class="media-body">
                                                <h5 class="media-heading">{{cartGoods.Name}}</h5>
                                                <a class="del-btn" href="javascript:;" ng-click="del(cartGoods)"><i class="fa fa-trash-o"></i></a>
                                                <div class="text-muted text-sm">{{cartGoods.SkuInfo}} <span class="pull-right marg-rt-20">x {{cartGoods.BuyCount}}</span></div>
                                                <p class="text-red"><strong>￥：{{cartGoods.Price}}</strong></p>
                                            </div>
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="pd-15">
                                        <div class="row margin-bottom-10">
                                            <div class="col-xs-6">
                                                账单总计：
                                            </div>
                                            <div class="col-xs-6 text-right">
                                                <span class="text-red"><strong>￥{{getCartGoodsAmount()}}</strong></span>
                                            </div>
                                        </div>
                                        <a href="/cart/index" class="btn green btn-block">进入购物车</a>
                                    </div>
                                </div>
                                <div ng-show="isCartEmpty">
                                    <div class="pd-15">
                                        <p><span class="fa fa-frown-o"></span> 购物车还没有商品赶紧选购吧~</p>                                        
                                    </div>
                                </div>

                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--搜索标头   end-->

