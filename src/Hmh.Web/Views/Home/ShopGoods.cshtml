
@{
    ViewBag.Title = "店铺商品列表";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

<div class="container marg-top-40">
    <div class="row">
        <div class="col-xs-2">
            <div class="goodsshopinfo" ng-controller="hmh.shopinfo">
                <div class="shopbase">
                    <div class="pd-top-10">
                        <img src="http://placehold.it/100x100" class="img-circle" />
                    </div>
                    <h4>{{shop.Name}}</h4>
                    <p>{{shop.Province}}·{{shop.City}}</p>
                    <p>
                        今日H币剩余限额<br />
                        <span class="text-lg text-xlg text-green">{{shop.HCoinLimit}}</span>
                    </p>
                    <div>
                        <a href="/account/index" class="btn btn-primary" style="width:50%"><i class="fa fa-heart"></i> 收藏</a><a href="" class="btn btn-info" style="width: 50%; "><i class="fa fa-comments"></i> 咨询</a>
                    </div>
                </div>

                <div class="portlet">
                    <div class="portlet-title">
                        <div class="caption">
                            全部商品
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="catlist">
                            <ul>
                                <li ng-repeat="shopGoodsCategory in shop.ShopGoodsCategoryes"><a href="/Home/ShopGoods?catid={{shopGoodsCategory.Id}}">{{shopGoodsCategory.Name}}</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-10">
            <div class="shopbanner">
                <img src="http://placehold.it/1003x280" />
            </div>
            <div class="portlet marg-top-20" ng-controller="hmh.shopinfo.shopgoods">
                <h3>女装</h3>
                
                <div class="pd-5 bd-btn">
                    <a href="javascript:;" ng-click="checkSort('price_asc')">价格从底到高</a>
                    <a href="javascript:;" ng-click="checkSort('sellcount_desc')">销量从高到底</a>
                        
                    <label><input type="checkbox" ng-model="postData.isExpressFree" />包邮</label>
                    <label><input type="checkbox" ng-model="postData.isStock" />有货</label>
                       
                </div>
               
                <div class="row marg-top-15">
                    <div class="col-xs-3" ng-repeat="goods in Goodses">
                        <p>
                            <a href="/Home/GoodsInfo?id={{goods.Id}}"><img src="http://placehold.it/250x250" class="img-responsive" /></a>
                        </p>
                        <p class="text-center">{{goods.Name}}</p>
                        <p class="text-center"><span class="text-red">￥{{goods.Price}}</span></p>
                    </div>
                </div>

                <hmh-pagination conf="paginationConf"></hmh-pagination>
               
            </div>
            <div class="portlet marg-top-20">
                <div class="portlet-title">
                    <div class="caption">
                        工商登记信息
                    </div>
                </div>
                <div class="portlet-body">

                </div>
            </div>
        </div>
    </div>
</div>

